{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--reload"
            ],
            "jinja": true,
            "autoStartBrowser": true
        },
        {
            "name": "Python Debugger: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}